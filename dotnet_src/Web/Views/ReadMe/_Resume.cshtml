@model  List<Sop.Domain.Entity.UserWork>


<div id="fh5co-resume" class="fh5co-bg-color">
    <div class="container">
        <div class="row animate-box">
            <div class="m-auto text-center fh5co-heading">
                <h2>My Work Experience </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-md-offset-0">
                <ul class="timeline">
                    <li class="timeline-heading text-center animate-box">
                        <div>
                            <h3> Work Experience </h3>
                        </div>
                    </li>
                    @foreach (var info in Model)
                    {
                        <li class="animate-box timeline-@(info.Id % 2 != 0 ? "inverted" : "unverted") ">
                            <div class="timeline-badge">
                                <i class="icon-suitcase"></i>
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h3 class="timeline-title">@info.JobTitle</h3>
                                    <span class="company">@info.CompanyName - @info.StartDate.ToString("yyyy") - @info.EndDate.ToString("yyyy")</span>
                                </div>
                                <div class="timeline-body">
                                    <p>@info.JobDescription </p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>