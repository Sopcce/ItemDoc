@using System.Diagnostics
@using System.Web.UI.WebControls
@using Microsoft.AspNet.Identity
@using StackExchange.Profiling;
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@ViewBag.Description">
    <meta name="author" content="">
    <title>@ViewBag.Title----最懂你的项目网</title>
    <link rel="icon" href="~/assets/images/favicon.png" type="image/png">


    <!-- Bootstrap core CSS -->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <!--[if lt IE 9]>
        <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://cdn.bootcss.com/jquery/1.11.0/jquery.js"></script>
    @Styles.Render("~/assets/commoncss")
    @RenderSection("heads", false)
</head>
<body>

    @MiniProfiler.RenderIncludes()
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Itemdream", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="navbar-collapse collapse sop-man-nav">
                <ul class="nav navbar-nav">

                    <li><a href="@SiteUrls.Instance().HomeIndex()">主页</a></li>
                    <li><a href="@SiteUrls.Instance().ToolIndex()">工具</a></li>
                    <li><a href="@SiteUrls.Instance().ItemIndex()">项目</a></li>
                    <li class="dropdown " style="display: none;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        var info = HttpContext.Current.GetOwinContext().Authentication;

                        if (info != null && info.User.Identity.IsAuthenticated)
                        {

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    @UserContext.GetUsersLoginInfo().NickName
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@SiteUrls.Instance().UserHome(info.User.Identity.GetUserName())">我的主页</a></li>
                                    <li><a href="@SiteUrls.Instance().UserPost(info.User.Identity.GetUserName())">内容管理</a></li>
                                    <li><a href="#">项目设置</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header">Nav header</li>
                                    <li><a href="#">设置要求</a></li>

                                    <li><a href="@SiteUrls.Instance().UserSignOut()">退出</a></li>
                                </ul>
                            </li>

                        }
                        else
                        {
                            <li><a href="@SiteUrls.Instance().UserLogin()">登陆</a></li>
                            <li><a href="@SiteUrls.Instance().UserRegister()">注册</a></li>
                        }


                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @RenderPage("~/Views/Home/_Footer.cshtml")
    </div>
   
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @Scripts.Render("~/assets/commonjs")
    @RenderSection("scripts", false)
</body>
</html>