@using ItemDoc.Core.Mvc.SystemMessage
@model UsersRegisterViewModel
@{
    ViewBag.Title = "注册页面";
    var systemMessageData = ViewData.Get("msg", new SystemMessageData(SystemMessageType.Success, "ok"));
}

@section heads
{
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #eee;
        }

        .form-signin {
            max-width: 60%;
            margin: 0 auto;
        }
    </style>
}
@section  scripts {


    

    @Scripts.Render("~/js/jquery.validate")

    <script type="text/javascript">
        $(function () {
            if ('@systemMessageData.Type' == '@SystemMessageType.Error') {
                alert("@systemMessageData.Content");
            } else if ('@systemMessageData.Type' == '@SystemMessageType.Default') {
                alert("@systemMessageData.Content");
            }
            $("#CheckCodeImg").click(function () {
                $("#CheckCodeImg").attr("src", "@SiteUrls.Instance().UserCaptchaCode()?" + Math.random());
            });
        });

    </script>

}
<div class="form-signin">
    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        @Html.ValidationMessageFor(n => n.UserLoginName)
        @Html.ValidationMessageFor(n => n.UserLoginPassWord)
        @Html.ValidationMessageFor(n => n.UserLoginCaptchaCode)
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Name</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(n => n.UserLoginName, new { minlength = "1", maxlength = "50", @class = "form-control", placeholder = "手机号码/邮箱账号/登录名称" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">NickName</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(n => n.UserLoginNickName, new { minlength = "1", @class = "form-control", placeholder = "昵称" })

            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-8">
                @Html.PasswordFor(n => n.UserLoginPassWord, new { minlength = "1", @class = "form-control", placeholder = "密码" })

            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">验证码</label>
            <div class="col-sm-8">
                <img id="CheckCodeImg" src="@SiteUrls.Instance().UserCaptchaCode()" border="0" alt="点击换一张" title="点击换一张" class="" style="cursor:pointer; " />
                @Html.TextBoxFor(n => n.UserLoginCaptchaCode, new { minlength = "1", maxlength = "4", @class = "form-control", placeholder = "验证码" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>
    }
</div>


