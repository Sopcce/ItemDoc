    ViewBag.Title = "_ProfileHeader";
}
 
<style>
    .avatar-uploader .el-upload {
        border: 1px dashed #d9d9d9;
        border-radius: 126px;
        cursor: pointer;
        position: relative;
        overflow: hidden; 
    }

    .avatar-uploader .el-upload:hover {
        border-color: #409EFF;
    }
    input[type="file"] {
        display: none;
    }

    .avatar-uploader-icon {
        font-size: 28px;
        color: #8c939d;
        width: 144px;
        height: 144px;
        line-height: 144px;
        text-align: center;
    }
     
</style>
 

<link href="~/Content/css/user.css?v=12312" rel="stylesheet" />
<div id="ProfileHeader" class="sopred">
    <div class="ProfileCard">
        <div id="ProfileHeader-userCover ">
            <div class="ProfileUserCoverEditor">
                <div>
                    <button type="button" class="UserCoverEditor-EditButton button">
                        <i class="fa fa-camera"></i>
                        编辑封面图片
                    </button>
                    <div class="ProfileUserCover">
                        <img class="ProfileUserCover-image" width="1000" src="#" alt="用户封面">
                    </div>
                </div>
            </div>
        </div>
        <div id="ProfileHeader-wrapper">
            <div class="">
                <div class="person_info_con">
                    <i class="fa fa-edit person-info-edit">&nbsp;修改个人资料</i>

                    <dl class="person-photo">
                        <dt>
                            <a id="app_3" class="">
                                <el-upload class="avatar-uploader"
                                           action="/upload/Files/"
                                           :show-file-list="false"
                                           :on-success="handleAvatarSuccess"
                                           :before-upload="beforeAvatarUpload">
                                    <img v-if="imageUrl" :src="imageUrl" class="avatar">
                                    <i v-else class="el-icon-plus avatar-uploader-icon"></i>
                                </el-upload>
                            </a>
                        </dt>
                        <dd class="focus_num"><b><a href="/my/follow" target="_blank">46</a></b>关注</dd>
                        <dd class="fans_num"><b><a href="/my/fans" target="_blank">1</a></b>粉丝</dd>
                    </dl>
                    <dl class="person-info">
                        <dt class="person-nick-name">
                            <span>招摇的小麻雀</span>
                        </dt>
                        <dd class="person-detail">
                            计算机软件
                            <span>|</span>学生
                            <span>|</span>郭家秋
                            <span>|</span>中国-山东省-青岛市
                            <span>|</span>男
                            <span>|</span>1993-9-2
                        </dd>
                        <dd class="person-sign">从事ASP.NET、ASP.NET MVC 网站软件开发，涉猎移动端开发、Android、PC端。</dd>

                    </dl>

                </div>
            </div>
        </div>
    </div>


</div>

